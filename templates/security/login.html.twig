{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="container row align">
        <div class=" card grey lighten-5 col s12 m8 offset-m2 l6 offset-l3" style="padding: 1em 0 3em 0; margin-top: 5em">
            <card class="card-content">
                <form method="post" class="col m8 offset-m2">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %}

                    <h5 class="h3 mb-3 font-weight-normal white-text">Connexion</h5>
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                           autocomplete="email" required autofocus>
                    <label for="inputPassword">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control"
                           autocomplete="current-password" required>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >
                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"/> <span>Se souvenir de moi</span>
                        </label>
                    </div>

                        <button style="margin-top: 1em" class="btn" type="submit">Se connecter</button>
                </form>
                <div class="col s12 offset-m2" style="margin-top: 1em">
                    <a class="btn" href="{{ path('app_forgot_password_request') }}">Mot de passe perdu</a>
                </div>
            </card>
        </div>
    </div>
{% endblock %}
